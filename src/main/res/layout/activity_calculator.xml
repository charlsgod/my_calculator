<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?themePrimary"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?themePrimary"
        android:elevation="0dp"
        app:elevation="0dp"
        android:theme="@style/ToolbarTheme"
        app:title="@string/app_name" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="14dp"
        app:cardBackgroundColor="?themePrimaryDark"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp">

        <com.charlsgod.mycalculator.commons.views.Label
            android:id="@+id/edt_digits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?themePrimaryDark"
            android:cursorVisible="false"
            android:ellipsize="none"
            android:focusable="false"
            android:gravity="end|center_vertical"
            android:inputType="none"
            android:maxLength="9"
            android:padding="4dp"
            android:singleLine="true"
            android:text="@string/zero"
            android:textAlignment="gravity"
            android:textColor="?fontDigitsColor"
            android:textIsSelectable="true"
            android:textSize="50sp"
            app:fontType="DIGITAL_ITALIC" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?themePrimary"
        app:columnCount="4"
        app:orientation="horizontal"
        app:rowCount="6"
        grid:alignmentMode="alignBounds"
        grid:columnCount="4">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_clean"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/clear"
            android:textAlignment="gravity"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_change_symbol"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/change_symbol"
            android:textAlignment="gravity"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_percentage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/percentage"
            android:textAlignment="gravity"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/divide"
            android:textAlignment="gravity"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/seven"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/eight"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/nine"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_multiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/multiply"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/four"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/five"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/six"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_subtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/subtract"
            android:textAlignment="gravity"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/one"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/two"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/three"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/add"
            android:textAlignment="gravity"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/zero"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_comma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themePrimaryDark"
            android:gravity="center"
            android:text="@string/comma"
            android:textAlignment="gravity"
            android:textColor="?fontNumbersColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_operate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="?themeAccent"
            android:gravity="center"
            android:text="@string/operate"
            android:textAlignment="gravity"
            android:textColor="?fontOperatorsColor"
            android:textSize="20sp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>
</LinearLayout>